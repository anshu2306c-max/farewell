  <canvas id="confetti"></canvas>
  <script>
    const STUDENTS = [
      {name:"Aarav Sharma"}, {name:"Ananya Gupta"}, {name:"Ishaan Verma"},
      {name:"Diya Singh"}, {name:"Kabir Patel"}, {name:"Riya Mehta"}
    ];
    function renderYearbook(){
      const grid = document.getElementById('messageGrid');
      grid.innerHTML = STUDENTS.map((s,i)=>`<div class='y-card'><div><strong>${i+1}. ${s.name}</strong></div><div class='y-note' contenteditable='true' data-i='${i}'>Write your message...</div></div>`).join('');
    }
    renderYearbook();
    document.getElementById('printBtn').onclick=()=>window.print();
  </script>
